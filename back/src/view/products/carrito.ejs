<%- include("../partials/head1.ejs",{pageTitle: "Carrito de compras" })%>
    <link rel="stylesheet" href="/css/carrito.css">
    <%- include("../partials/head2.ejs") %>

        <body>
            <header>
                <%- include("../partials/barraNav.ejs", { req: locals.req }) %>
            </header>
            <br>
            <main>
                <div class="titulo">
                    <h2>CARRITO DE COMPRA</h2>
                </div><br>
                <div class="barra-titulos">
                    <ul>
                        <li>PRODUCTO</li>
                        <li>NOMBRE</li>
                        <li>PRECIO</li>
                        <li>CANTIDAD</li>
                        <li>TOTAL</li>
                    </ul>
                </div>
                <form action="">
                <div class="barras-productos">
                    <div class="barra-1">
                        <ul>
                            <li><img class="imagen" src="/img/imgProducts/<%= miProducto.imagen %>"
                                    alt="Imagen de algun producto"></li>
                            <li>
                                <%= miProducto.nombre %>
                            </li>
                            <li>
                                <%= miProducto.precio %>
                            </li>
                            <li><input class="cantidad" type="number" name="numero" value="<%= miProducto.cantidad %>">
                            </li>
                            <li><input class="eliminar" type="reset" name="borrar" value="Eliminar"></li>
                        </ul>
                    </div>
                </div>
                </form>
                <div class="total">
                    <div class="total1">
                        <p>TOTAL: <%= miProducto.precio * miProducto.cantidad %> </p>
                    </div>
                </div>
                <br>
                <div class="agregar">
                    <input class="agregar1" type="button" name="agregarProducto" value="AGREGAR OTRO PRODUCTO">
                </div>
                <div class="finalizar">
                    <input class="finalizar1" type="button" name="agregarProducto" value="FINALIZAR COMPRA">
                </div>
            </main>
            <br>
            <%- include("../partials/footer.ejs") %>
        </body>

        </html>