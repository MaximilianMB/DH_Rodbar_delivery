<%- include("../partials/head1.ejs",{pageTitle: "Carrito de compras"})%>
<link rel="stylesheet" href="css/newProduct.css">
<%- include("../partials/head2.ejs") %>
<body>
    <header>
        <%- include("../partials/barraNav.ejs", { req: locals.req }) %>
    </header>
    <br>
    <main>
        <div class="errores">
            <% if(typeof(errors) != "undefined"){ %>
                <ul class="peligro-error">
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                        <% }); %> 
                </ul>
            <% }; %> 
        </div>
        <form class="form-editar"action="/newProduct" method="POST" enctype="multipart/form-data" >
            <label for="nombre">Nombre del producto</label>
            <input type="text" name="nombre" id="nombre" value="<%= req.body.nombre %>">
            <div id="errorNombre" class="error"></div>
            <br>
            <label for="ingredientes">Ingredientes</label>
            <input type="text" name="ingredientes" id="ingredientes" value="<%= req.body.ingredientes %>">
            <div id="errorIngredientes" class="error"></div>
            <br>
            <div class="imagen">
            <label for="imagen">Imagen del producto</label>
            <input type="file" name="imagen" id="imagen">
            </div>
            <br>
            <label for="categoria">Categoria</label>
            <input type="text" name="categoriaId" id="categoria" value="<%= req.body.categoriaId %>">
            <div id="errorCategoria" class="error"></div>
            <br>
            <label for="precio">Precio</label>
            <input type="text" name="precio" id="precio" value="<%= req.body.precio %>">
            <div id="errorPrecio" class="error"></div>
            <br>
            <div class="botones">
            <input class="boton-crear" type="submit" value="Crear">
            <input class="boton-crear" type="reset" value="Borrar" >
            </div>
        </form>
    </main>
    <%- include("../partials/footer.ejs") %>
    <script src="/js/Product/ValidatorCrearProducto.js"></script>
</body>

</html>