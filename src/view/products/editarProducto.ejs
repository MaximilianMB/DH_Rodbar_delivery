<%- include("../partials/head1.ejs",{pageTitle: "Carrito de compras"})%>
<link rel="stylesheet" href="/css/newProduct.css">
<%- include("../partials/head2.ejs") %>
<body>
    <header>
        <%- include("../partials/barraNav.ejs", { req: locals.req }) %>
    </header>
    <br>
    <main>
        <form class="form-editar" action="/editar/<%= miProducto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <label for="nombre">Nombre del producto</label>
            <input type="text" name="nombre" id="nombre" value="<%= miProducto.nombre %>">
            <div id="errorNombre" class="error"></div>
            <br>
            <label for="ingredientes">Ingredientes</label>
            <input type="text" name="ingredientes" id="ingredientes" value="<%= miProducto.ingredientes %>">
            <div id="errorIngredientes" class="error"></div>
            <br>
            <div class="imagen">
            <label for="imagen">Imagen del producto</label>
            <input type="file" name="imagen" id="imagen" value="<%=miProducto.imagen%>">
            <div id="errorImagen" class="error"></div>
            </div>
            <br>
            <label for="categoria">Categoria</label>
            <input type="text" name="categoriaId" id="categoria" value="<%= miProducto.categoriaId %>">
            <div id="errorCategoria" class="error"></div>
            <br>
            <label for="precio">Precio</label>
            <input type="text" name="precio" id="precio" value="<%= miProducto.precio %>">
            <div id="errorPrecio" class="error"></div>
            <br>
            <div class="botones">
                <div class="boton-crear">
            <input type="submit" value="Actualizar">
                </div>
                <div class="boton-crear">
            <a href="/admProductos"><input type="button" value="Atras" ></a>
                </div>
            </div>
        </form>
    </main>
    <%- include("../partials/footer.ejs") %>
    <script src="/js/Product/ValidatorEditarProducto.js"></script>
</body>

</html>